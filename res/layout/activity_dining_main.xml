<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DiningMain" >

    <View
        android:id="@+id/philospher_table"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/philosopher_table" />

    <View
        android:id="@+id/philospher1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/philospher_table"
        android:layout_centerHorizontal="true"
        android:background="@drawable/philosopher_portrait" />

     <View
         android:id="@+id/philospher3"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_alignTop="@+id/philospher_table"
         android:layout_marginTop="29dp"
         android:layout_toRightOf="@+id/philospher_table"
         android:background="@drawable/philosopher_portrait" />

     <View
         android:id="@+id/philospher4"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/philospher2"
         android:layout_alignTop="@+id/philospher5"
         android:layout_marginLeft="25dp"
         android:background="@drawable/philosopher_portrait" />

     <View
         android:id="@+id/philospher2"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_alignTop="@+id/philospher3"
         android:layout_toLeftOf="@+id/philospher_table"
         android:background="@drawable/philosopher_portrait" />

     <View
         android:id="@+id/philospher5"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_below="@+id/philospher3"
         android:layout_marginLeft="19dp"
         android:layout_marginTop="40dp"
         android:layout_toRightOf="@+id/philospher1"
         android:background="@drawable/philosopher_portrait" />

</RelativeLayout>